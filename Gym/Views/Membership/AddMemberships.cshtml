@{
    ViewData["Title"] = "Add / Memberships";
}

@model Gym.DTO.AddMembershipDTO

<div class="text-center">
    <h1 class="display-4">Add Membership</h1>
</div>

<form asp-controller="Membership" asp-action="AddMembershipsForm">
    <div class="form-group">
        <label class="mt-4">Name</label>
        <input class="form-control" type="text" placeholder="Enter Name" asp-for="Name"></input>
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label class="mt-4">Price per month</label>
        <input class="form-control" type="number" placeholder="0.00" asp-for="PricePerMonth" step="0.01"></input>
        <span class="text-danger" asp-validation-for="PricePerMonth"></span>
    </div>

    <button class="btn btn-primary" type="submit" style="margin-top: 10px;">Ok</button>

</form>