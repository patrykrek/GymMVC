@{
    ViewData["Title"] = "Roles";
}

@model List<Role>

<div class="text-center">
    <h1 class="display-4">Available Roles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>
                        @role.Id
                    </td>
                    <td>
                        @role.Name
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Role" asp-action="AssignRoles" asp-route-id="@role.Id">Assign</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
