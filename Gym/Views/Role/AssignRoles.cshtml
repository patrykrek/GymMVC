@{
    ViewData["Title"] = "Assign / Roles";
}

@model UserRole

<div class="text-center">
    <h1 class="display-4">Assign Role</h1>
</div>

<form asp-controller="Role" asp-action="AssignRolesForm">
    <div class="form-group">
        <label class="mt-4">User Email</label>
        <input class="form-control" type="text" placeholder="Enter Email" asp-for="Email"></input>
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label class="mt-4">Role</label>
        <input class="form-control" type="text" placeholder="Enter Role" asp-for="Roles"></input>
        <span class="text-danger" asp-validation-for="Roles"></span>
    </div>

    <button class="btn btn-primary" type="submit" style="margin-top: 10px;">Ok</button>

</form>