

@{
    ViewData["Title"] = "Display / Trainers";
}
@model List<Gym.DTO.GetTrainerDTO>

<div class="text-center">
    <h1 class="display-4">All trainers</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Bio
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trainer in Model)
            {
                <tr>
                    <td>
                        @trainer.Id
                    </td>
                    <td>
                        @trainer.FirstName
                    </td>
                    <td>
                        @trainer.LastName
                    </td>
                    <td>
                        @trainer.Bio
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-primary btn-sm" asp-action="EditTrainers" asp-route-id="@trainer.Id">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="DeleteTrainers" asp-route-id="@trainer.Id">Delete</a>
                        }
                       
                    </td>
                   

                </tr>
            }
        </tbody>
        
    </table>

</div>
