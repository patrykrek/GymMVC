@{
    ViewData["Title"] = "Add / Trainers";
}

@model Gym.DTO.AddTrainerDTO

<div class="text-center">
    <h1 class="display-4">Add Trainers</h1>

</div>

<form asp-controller="Trainer" asp-action="AddTrainersForm">
    <div class="form-group">
        <label class="mt-4">First Name</label>
        <input class="form-control" type="text" placeholder="Enter First Name" asp-for="FirstName"></input>
        <span class="text-danger" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label class="mt-4">Last Name</label>
        <input class="form-control" type="text" placeholder="Enter Last Name" asp-for="LastName"></input>
        <span class="text-danger" asp-validation-for="LastName"></span>
    </div>

    <div class="form-group">
        <label class="mt-4">BIO</label>
        <input class="form-control" type="text" placeholder="Enter BIO" asp-for="Bio"></input>
        <span class="text-danger" asp-validation-for="Bio"></span>
    </div>

   

    <button class="btn btn-primary" type="submit" style="margin-top: 10px">Ok</button>

</form>

